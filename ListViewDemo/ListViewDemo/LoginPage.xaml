<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewDemo.LoginPage">
    
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Entry x:Name="txtuserId" Placeholder="User Name"></Entry>
            <Entry x:Name="txtPassword" IsPassword="True" Placeholder="Password"></Entry>
            <Button Clicked="Button_Clicked" Text="Login!"></Button>
            
        </StackLayout>
   
</ContentPage>